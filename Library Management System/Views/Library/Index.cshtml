@model IEnumerable<BorrowedBook>
   
<h2>Borrowed Books</h2>

<p>
    <a asp-action="getBorrowedBook">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => student.BorrowedId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.BorrowDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => student.ReturnDate)
                </td>
                <td>
                    <a asp-action="getBorrowedBook" asp-route-id="@student.BorrowedId">Edit</a> |
                    @* <a asp-action="DeleteStudent" asp-route-id="@student.BorrowedId" onclick="return confirmAndDelete(@student.BorrowedId);">Delete</a> *@

                    <form asp-action="DeleteStudent" asp-route-id="@student.BorrowedId" method="post" onsubmit="return confirmAndDelete(@student.BorrowedId);">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
